x = "There are %d types of people." % 10
binary = "binary"
do_not = "don't"
y = "Those who know %s and those who %s." % (binary, do_not)

print x
print y

print "I said: %r." % x # this one puts single-quotes to the variable(string)
print "I also said: '%s'." % y

hilarious = False
joke_evaluation = "Isn't that joke so funny?! %r"  # this one lefts a variable without a value

print joke_evaluation % hilarious # this one replace the variable 'hilarious' into the space left by the %r

w = "This is the left side of..."
e = "a string with a right side."

print w + e  # this one prints the addition between the strings 

